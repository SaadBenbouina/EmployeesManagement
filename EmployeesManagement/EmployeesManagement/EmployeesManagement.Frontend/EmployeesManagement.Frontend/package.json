{
  "name": "employeemanagementfrontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build-storybook": "cross-env NODE_OPTIONS=--max-old-space-size=8192 storybook build",
    "dev": "vite",
    "gen:i18next": "i18next \"src/**/*.{ts,tsx}\"",
    "gulp:clean": "gulp clean",
    "gulp:copy": "gulp copy",
    "gulp:copy:locales": "gulp copyLocales",
    "gulp:copy:templates": "gulp copyTemplates",
    "gulp:copy:swagger": "gulp copySwagger",
    "lint": "tsc --noEmit && eslint \"src/**/*.{ts,tsx}\" --quiet --fix",
    "lint:dryRun": "eslint src/**/*.ts --fix-dry-run",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:prettier": "prettier \"src/**/*\" --write",
    "nibble": "eslint-nibble \"src/**/*.{ts,tsx}\" --cache",
    "nibble:fixable": "eslint-nibble \"src/**/*.{ts,tsx}\" --cache --fixable-only",
    "prepare": "cd ../../ && husky install",
    "sass:all": "npm run sass:dev && npm run sass:minified && npm run sass:storybook",
    "sass:dev": "sass css:./public/css/dev",
    "sass:minified": "sass css:./public/css/production --style=compressed",
    "sass:storybook": "sass css:./public/css --style=compressed",
    "sassIcons": "node-sass css/customization/themes/standard/app-icons.scss -o wwwroot/css/production/customization/themes/standard  --output-style compressed",
    "start": "vite",
    "start:productionConfig": "vite build --mode production",
    "storybook": "start-storybook -p 6006",
    "swagger:fetch-gen": "curl -k -o src/generatedCode/swagger.json https://localhost:7088/swagger/v1/swagger.json && nswag run src/generatedCode/nswag.json",
    "swagger:fmt": "deno fmt src/generatedCode/pbd-core/pbd-core-api.ts && deno fmt src/generatedCode/pbd-core/pbd-core-api-services.ts",
    "swagger:gen": "nswag run src/generatedCode/nswag.json && npm run swagger:patch && npm run swagger:fmt",
    "swagger:nswag": "nswag run src/generatedCode/nswag.json",
    "swagger:patch": "python tools/gen-swagger-query.py src/generatedCode/pbd-core/pbd-core-api.ts src/generatedCode/pbd-core/pbd-core-api-services.ts",
    "test": "vitest",
    "test:ci": "vitest run --reporter=junit",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "tsc": "tsc"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.2",
    "react-dom": "^18.2.0",
    "react-icons": "^5.2.1",
    "react-router-bootstrap": "^0.26.2",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "nswag": "^14.0.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "cross-env": "^7.0.3",
    "i18next": "^23.11.3",
    "gulp": "^4.0.2",
    "eslint-nibble": "^8.1.0",
    "prettier": "^3.2.5",
    "node-sass": "^9.0.0",
    "sass": "^1.76.0",
    "vitest": "1.6.0",
    "husky": "^9.0.11",
    "ts-loader": "^9.5.1",
    "babel-loader": "^9.1.3",
    "identity-obj-proxy": "^3.0.0",
    "msw": "2.2.14",
    "jsdom": "24.0.0"
  }
}
